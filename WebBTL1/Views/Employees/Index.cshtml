@using WebBTL1.Pagination;
@using WebBTL1.ViewModels;
@model PaginatedList<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-primary">Create New
    @*<a >Create New</a>*@
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                Dob
                @*@Html.DisplayNameFor(model => model.Dob)*@
            </th>
            <th>
                Age
                @*@Html.DisplayNameFor(model => model.Age)*@
            </th>
            <th>
                Ethnic
                @*@Html.DisplayNameFor(model => model.Ethnic)*@
            </th>
            <th>
                Job
                @*@Html.DisplayNameFor(model => model.Job)*@
            </th>
            <th>
                IdentityNumber
                @*@Html.DisplayNameFor(model => model.IdentityNumber)*@
            </th>
            <th>
                PhoneNumber
                @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
            </th>
            <th>
                Province
                @*@Html.DisplayNameFor(model => model.Province)*@
            </th>
            <th>
                District
                @*@Html.DisplayNameFor(model => model.District)*@
            </th>
            <th>
                Commune
                @*@Html.DisplayNameFor(model => model.Commune)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ethnic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentityNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>@Html.DisplayFor(modelItem => item.Province)</td>
                <td>@Html.DisplayFor(modelItem => item.District)</td>
                <td>@Html.DisplayFor(modelItem => item.Commune)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex-1)" class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex+1)" class="btn btn-default @nextDisabled">
    Next
</a>
